<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/green_900</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/dmsansregular</item>

    </style>

    <style name="ButtonBorderLightWithRadius">
        <item name="paddingStart">4dp</item>
        <item name="paddingEnd">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/btn_border_light_with_radius</item>
        <item name="android:textColor">@color/green_500</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_height">42dp</item>
    </style>

    <style name="ButtonBorderLight">
        <item name="paddingStart">4dp</item>
        <item name="paddingEnd">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/btn_border_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">42dp</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>